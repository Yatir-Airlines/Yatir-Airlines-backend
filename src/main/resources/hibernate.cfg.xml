<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>

        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/yatir_airlines</property>
        <property name="hibernate.connection.username">VANESSA</property>
        <property name="hibernate.connection.password">password</property>

        <property name="hibernate.session_factory_name">SmisSessionFactory</property>
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.default_schema">yatir_airlines</property>
        <property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
        <property name="current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="lazy">false</property>
        <!-- c3p0 -->
        <property name="hibernate.c3p0.min_size">10</property>
        <property name="hibernate.c3p0.max_size">100</property>
        <property name="hibernate.c3p0.acquire_increment">1</property>
        <property name="hibernate.c3p0.max_statements">1</property>
        <property name="hibernate.c3p0.timeout">1800</property>

        <!-- Models -->
        <mapping class="rw.ac.rca.smis.orm.Airline" />
        <mapping class="rw.ac.rca.smis.orm.Airport" />
        <mapping class="rw.ac.rca.smis.orm.Booking" />
        <mapping class="rw.ac.rca.smis.orm.Flight" />
        <mapping class="rw.ac.rca.smis.orm.Passenger" />
        <mapping class="rw.ac.rca.smis.orm.Plane" />






    </session-factory>
</hibernate-configuration>